<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prototype.Views.DashboardPage"
             xmlns:controls="clr-namespace:prototype.UI.Controls"
             Title="Dashboard">
    <ScrollView>
        <StackLayout BackgroundColor="White">
            
            <controls:CardView Title="Inventory">
                <controls:CardView.InsideContent>
                    <StackLayout BackgroundColor="White" Padding="5">
                    </StackLayout>
                </controls:CardView.InsideContent>
            </controls:CardView>
            
            <controls:CardView Title="Interesting facts">
                <controls:CardView.InsideContent>
                    <Label LineBreakMode="WordWrap"
                           Text="other not interesting facts about things, some funny quote about survival maybe? Dont know shit, im a dev not a comedian. Mostly anyway."  />
                </controls:CardView.InsideContent>
            </controls:CardView>

            <controls:CardView Title="Quote of the day">
                <controls:CardView.InsideContent>
                    <Label Text="{Binding Quote}" LineBreakMode="WordWrap" />
                </controls:CardView.InsideContent>
            </controls:CardView>
            
        </StackLayout>
    </ScrollView>
</ContentPage>